    <script>
        $(document).ready(function () {

            $("#labelPadreNombre").hide();
            $("#divPadreNombre").hide();

            $("#img-captcha-b").click(function () {
                d = new Date();
                $("#img-captcha").attr("src", "/get-captcha-image?" + d.getTime());
            });

            $("#MayoriaDeEdad").change(function () {
                if ($("#MayoriaDeEdad").val() == 'true') {
                    $("#labelPadreNombre").hide();
                    $("#divPadreNombre").hide();
                }
                else {
                    $("#labelPadreNombre").show();
                    $("#divPadreNombre").show();
                }
            });
        });
    </script>

