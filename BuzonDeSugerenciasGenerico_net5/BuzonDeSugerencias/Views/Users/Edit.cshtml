@model BuzonDeSugerencias.Models.User

@{
    ViewData["Title"] = "Edit";
}

<main style="min-height:500px;">
    <div class="section overflow-hidden">
        <div class="container z-2">
            <h3 style="margin-top: 0.5rem;">Usuarios</h3>
            <hr style="margin-top: 0.5rem; margin-bottom: 0.5rem;" />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group" style="display:none;">
                            <label asp-for="UniqueId" class="control-label"></label>
                            <input asp-for="UniqueId" class="form-control" />
                            <span asp-validation-for="UniqueId" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none;">
                            <label asp-for="TypeDoc" class="control-label"></label>
                            <input asp-for="TypeDoc" class="form-control" />
                            <span asp-validation-for="TypeDoc" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none;">
                            <label asp-for="NumberDoc" class="control-label"></label>
                            <input asp-for="NumberDoc" class="form-control" />
                            <span asp-validation-for="NumberDoc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nombre</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none;">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none;">
                            <label asp-for="CellPhone" class="control-label"></label>
                            <input asp-for="CellPhone" class="form-control" />
                            <span asp-validation-for="CellPhone" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none;">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none;">
                            <label asp-for="Created" class="control-label"></label>
                            <input asp-for="Created" class="form-control" />
                            <span asp-validation-for="Created" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none;">
                            <label asp-for="Modified" class="control-label"></label>
                            <input asp-for="Modified" class="form-control" />
                            <span asp-validation-for="Modified" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="display:none;">
                            <label asp-for="LastAccess" class="control-label"></label>
                            <input asp-for="LastAccess" class="form-control" />
                            <span asp-validation-for="LastAccess" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Habilitado</label>
                            <select class="form-control" id="Enabled" name="Enabled">
                                <option value="true">Si</option>
                                @if (Model.Enabled == false)
                                {
                                    <option selected value="false">No</option>
                                }
                                else
                                {
                                    <option value="false">No</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Recibe Email</label>
                            <select class="form-control" id="RecibeEmail" name="RecibeEmail">
                                <option value="true">Si</option>
                                @if (Model.RecibeEmail == false)
                                {
                                    <option selected value="false">No</option>
                                }
                                else
                                {
                                    <option value="false">No</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Es Administrador</label>
                            <select class="form-control" id="IsAdmin" name="IsAdmin">
                                <option value="true">Si</option>
                                @if (Model.IsAdmin == false)
                                {
                                    <option selected value="false">No</option>
                                }
                                else
                                {
                                    <option value="false">No</option>
                                }
                            </select>
                        </div>

                        
                       

                        <div class="form-group">
                            <input type="submit" value="Grabar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Regresar</a>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
